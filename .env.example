# Server ports
PORT=3000
HTTPS_PORT=3443

# Trust reverse proxy headers (set 1 behind nginx/caddy/cloudflare)
TRUST_PROXY=1

# Disable local self-signed HTTPS listener when using reverse proxy TLS
WT_DISABLE_LOCAL_SSL=1

# Bootstrap owner account on first empty DB only
WT_BOOTSTRAP_USER=admin
WT_BOOTSTRAP_PASS=change-me-strong-password

# Optional CORS allowlist (comma-separated origins)
# Example:
# WT_CORS_ORIGINS=https://app.yourdomain.com,https://ops.yourdomain.com
WT_CORS_ORIGINS=

# Backup retention and optional off-machine upload target
BACKUP_RETENTION_DAYS=30
# BACKUP_RCLONE_REMOTE=remote-name:warehouse-tracker-backups
# BACKUP_S3_URI=s3://your-bucket/warehouse-tracker-backups/

# API rate limiting (production hardening)
WT_API_RATE_WINDOW_MS=60000
WT_API_RATE_MAX=600

# Login brute-force protection
WT_LOGIN_RATE_WINDOW_MS=900000
WT_LOGIN_RATE_MAX_ATTEMPTS=5
WT_LOGIN_BLOCK_MS=900000
